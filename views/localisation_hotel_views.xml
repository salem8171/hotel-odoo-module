<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="localisation_hotel_list_view">
      <field name="name">localisation_hotels</field>
      <field name="model">hotel.localisation_hotel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="intitule_localisation_hotel"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="localisation_hotel_form_view">
      <field name="name">localisation_hotel form</field>
      <field name="model">hotel.localisation_hotel</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="intitule_localisation_hotel"></field>
          </group>
          <notebook>
            <page string="Liste d'hotels">
              <field name="hotel_ids"/>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="localisation_hotel_action_window">
      <field name="name">localisation_hotel window</field>
      <field name="res_model">hotel.localisation_hotel</field>
      <field name="view_mode">tree,form</field>
    </record>

