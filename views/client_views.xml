      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

        <!-- Top menu item -->
        <menuitem name="hotel" id="hotel.menu_root"/>

        <!-- menu clients -->
        <menuitem name="clients" id="hotel_client_cat" parent="hotel.menu_root"/>
        <!--
    <menuitem name="Menu 2" id="hotel.menu_2" parent="hotel.menu_root"/>
    -->
        <!-- actions -->
        <menuitem name="List of clients" id="hotel_client_list" parent="hotel_client_cat"
                  action="client_action_window"/>
        <!--
    <menuitem name="Server to list" id="hotel" parent="hotel.menu_2" action="hotel.action_server"/>
    -->
    </data>
</odoo>
