      </field>
    </record>
    -->

        <!-- Top menu item -->
    <menuitem name="hotel" id="hotel.menu_root"/>

        <!-- menu metiers -->
    <menuitem name="metiers" id="hotel_metier_cat" parent="hotel.menu_root"/>
        <!--
    <menuitem name="Menu 2" id="hotel.menu_2" parent="hotel.menu_root"/>
    -->
        <!-- actions -->
    <menuitem name="List of metiers" id="hotel_metier_list" parent="hotel_metier_cat" action="metier_action_window"/>
        <!--
    <menuitem name="Server to list" id="hotel" parent="hotel.menu_2" action="hotel.action_server"/>
